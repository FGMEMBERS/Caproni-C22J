<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>throttles.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>face</object-name>
    <object-name>trou</object-name>
    <object-name>throttleL</object-name>
    <object-name>throttleR</object-name>
    
    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/panel-dim</factor-prop>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.8 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>throttleL</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> 50 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>throttleR</object-name>
    <property>controls/engines/engine[1]/throttle</property>
    <factor> 50 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
