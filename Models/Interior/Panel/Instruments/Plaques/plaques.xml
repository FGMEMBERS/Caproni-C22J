<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>plaques.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>plaques</object-name>
    
    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>plaques</object-name>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/panel-dim</factor-prop>
      <red>   0.8 </red>
      <green> 0.4 </green>
      <blue>  0.4 </blue>
    </emission>
  </animation>
  
</PropertyList>
